#include <stdio.h>

#include <stdio.h>

int num1, num2, num3;
void sort3(int* p1, int* p2, int* p3);

int main(void)
{

	int num1, num2, num3;
	

	printf("Enter three integers, separated by a comma (,) \n");
	scanf_s("%d,%d,%d", &num1, &num2, &num3);

	int* p1 = &num1;
	int* p2 = &num2;
	int* p3 = &num3;

	sort3(p1,p2,p3);
	
	

	return 0;
}

void sort3(int* p1, int* p2, int* p3)
{

	int temp;

	if (*p1 < *p2 && *p2 < *p3)	// if already in order
	{
		printf("The numbers are already in ascending order\n");		
	}
	if (*p1 > * p2 && *p2 > * p3)	//	3,2,1
	{
		temp = num1;
		num1 = num3;
		num3 = temp;
		printf("Integers in ascending order are: \n % d, % d, % d", num1, num2, num3);
	}
	while (*p1 > * p2 && *p2 < *p3)
	{
		if (*p1 > * p2 && *p1 > * p3)	// 3,1,2
		{
			temp = num1;
			num1 = num2;
			num2 = num3;
			num3 = temp;
			printf("Integers in ascending order are: \n % d, % d, % d", num1, num2, num3);
		}
		if (*p1 > * p2 && *p1 < *p3)	// 2, 1, 3
		{
			temp = num1;
			num1 = num2;
			num2 = temp;
			printf("Integers in ascending order are: \n % d, % d, % d", num1, num2, num3);
		}
	}
	while (*p1 <*p2 && *p2 > * p3)
	{
		if (*p1 < *p2 && *p1 < *p3)	// 1,3,2
		{
			temp = num2;
			num2 = num3;
			num3 = temp;	
			printf("Integers in ascending order are: \n % d, % d, % d", num1, num2, num3);
		}
		if (*p1 < *p2 && *p1 > * p3)	// 2,3,1
		{
			temp = num1;
			num1 = num3;
			num3 = num2;
			num2 = temp;
			printf("Integers in ascending order are: \n % d, % d, % d", num1, num2, num3);
		}
	}
	return;
}

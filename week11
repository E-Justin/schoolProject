#include <stdio.h>

int main(void)
{
	int num1;
	int* p1 = &num1;
	int num2;
	int* p2 = &num2;
	int num3;
	int* p3 = &num3;
	int first, second, third;
	

	printf("Enter three integers, separated by a comma (,) \n");
	scanf_s("%d,%d,%d", &num1, &num2, &num3);

	if (*p1 < *p2 && *p1 < *p3)
	{
		first = num1;
	}
	if (*p2 < *p1 && *p2 < *p3)
	{
		first = num2;
	}
	if (*p3 < *p1 && *p3 < *p2)
	{
		first = num3;
	}

	if (*p1 > * p2 && *p1 > * p3)
	{
		third = num1;
	}
	if (*p2 > * p1 && *p2 > * p3)
	{
		third = num2;
	}
	if (*p3 > * p1 && *p3 > * p2)
	{
		third = num2;
	}

	if (*p1 != first && *p1 != third)
	{
		second = num1;
	}
	if (*p2 != first && *p2 != third)
	{
		second = num2;
	}
	if (*p3 != first && *p3 != third)
	{
		second = num3;
	}


	printf("The numbers in ascending order are:\n %d\t%d\t%d\n", first, second, third);
	printf("The numbers in descending order are: \n %d\t%d\t%d\t\n", third, second, first);

	return 0;
}
